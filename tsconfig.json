{
  "compilerOptions": {
    "lib": [
      "es2018"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types",
      "./tests/types"
    ],
    "baseUrl": "./src",
    "paths": {
      "*": ["types/*"],
      "~/*": ["*"],
      "#/*": ["../tests/*"]
    },

    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist"
  }
}
